<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/com_xinstars_toast_notification_background" >

    <ImageView 
        android:id="@+id/toast_notification_full_image"
        android:layout_height="64dp"
        android:layout_width="match_parent"
        android:contentDescription="@string/descr_notificaiotn_icon"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/toast_notification_icon"
        android:layout_width="52dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/descr_notificaiotn_icon"
        android:src="@drawable/com_xinstars_icon" />

    <TextView
        android:id="@+id/toast_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/toast_notification_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/default_text"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/toast_notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toast_notification_title"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toast_notification_title"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/default_text"
        android:textColor="#D0D0D0"
        android:textSize="14sp" />

</RelativeLayout>